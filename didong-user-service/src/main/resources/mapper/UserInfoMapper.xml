<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.didong.mapper.UserInfoMapper">
    <sql id="Base_Column_List">
        id, user_id, nick_name,age, birthday, age,gender,avatar,live_address,constellation,login_type,user_phone,email,
        school,udid,access_token,user_level,del_flag, create_time, last_update_time,last_online_time,last_online_ip,user_status
    </sql>
    <select id="selectUserInfoByPhoneAndLoginType" parameterType="com.didong.entity.UserInfo" resultType="com.didong.entity.UserInfo">
      select
      <include refid="Base_Column_List"/>
      from user_info a
      <where>
          a.login_type=#{loginType} and a.user_phone=#{phone}
      </where>
    </select>

</mapper>